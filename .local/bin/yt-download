#!/usr/bin/sh

# "Download videos/audio from Youtube from clipboard or batch from file"

if ! command -v yt-dlp >/dev/null; then
  echo "yt-dlp could not be found. Please install it."
  exit 1
fi

help() {
  cat <<EOF
Youtube Video Downloader

Usage:
  yt-download FLAG <FLAG_ARGS> URL FILE

Available Options:
  -a, --audio URL      Downloads given YT URL to audio
  -b, --batch FILE     Downloads all URL in a BATCH_FILE to audio
  -d, --directory DIR  Set output directory for downloaded files
  -h, --help           Displays this message and exits
  -v, --video URL      Downloads all URL in a BATCH_FILE to video
EOF
}

downloadVideo() {
  yt-dlp -x --format "bv*[ext=mp4]+ba[ext=m4a]/b[ext=mp4]" --add-metadata --embed-thumbnail --no-playlist --downloader aria2c --downloader-args '-c -j 3 -x 3 -s 3 -k 1M' "$@"
}

downloadAudio() {
  yt-dlp -x -f bestaudio --add-metadata --embed-thumbnail --no-playlist --downloader aria2c --downloader-args '-c -j 3 -x 3 -s 3 -k 1M' "$@"
}

initializeDownload() {
  [ -n "$AUDIO" ] && downloadAudio "$URL" -P "$OUTPUT_DIR" &
  [ -n "$VIDEO" ] && downloadVideo "$URL" -P "$OUTPUT_DIR" &
  wait
}

getUrl() {
  clipmethod="$XDG_SESSION_TYPE"

  if [ -n "$1" ]; then
    URL=$1
  else
    if [ "$clipmethod" = "x11" ]; then
      URL=$(xclip -o)
    elif [ "$clipmethod" = "wayland" ]; then
      URL=$(wl-paste)
    fi
  fi

  if ! echo "$URL" | grep -q "^https://"; then
    notify-send -u normal "Youtube Downloader: Error" "An error occurred! Maybe a wrong URL?"
    echo "An error occurred! Maybe a wrong URL?"
    exit 1
  fi
}

isFormatSet() {
  [ -z "$AUDIO" ] && [ -z "$VIDEO" ] && {
    echo "ERROR: Format not set!"
    exit 1
  }
}

batch() {
  OUTPUT_DIR=${OUTPUT_DIR:-$HOME}

  isFormatSet
  echo "Downloading from file $BATCH_FILE"
  initializeDownload
  echo "Finished!"
}

getTitle() {
  title="$(yt-dlp --get-title "$URL")"
}

main() {
  OUTPUT_DIR=${OUTPUT_DIR:-$HOME}

  isFormatSet
  getUrl "$1"
  getTitle &
  notify-send -u normal "Youtube Downloader" "Initiating the download..."

  initializeDownload
  wait

  notify-send -u normal "Youtube Downloader: Success" "$title downloaded"
}

if [ "$#" -eq 0 ]; then
  echo "ERROR: No arguments provided."
  exit 0
fi

while getopts ":h-avd:" opt; do
  case "$opt" in
  h)
    help
    exit 0
    ;;
  -)
    break
    ;;
  a)
    AUDIO=1
    ;;
  v)
    VIDEO=1
    ;;
  d)
    OUTPUT_DIR=$OPTARG
    ;;
  ?)
    echo "ERROR: Invalid option '-$OPTARG'" >&2
    exit 1
    ;;
  esac
done

shift $((OPTIND - 1))

while [ "$#" -ne 0 ]; do
  case "$1" in
  --audio)
    shift
    AUDIO=1
    ;;
  --directory)
    shift
    OUTPUT_DIR=$1
    ;;
  --video)
    shift
    VIDEO=1
    ;;
  -b | --batch)
    BATCH_FILE=$2
    batch
    exit 0
    ;;
  --help)
    help
    exit 0
    ;;
  *)
    break
    ;;
  esac
done

main "$@"
