# Colors

# Virtual Tags

color.today        = bold cyan
color.yesterday    = red
color.blocked      = white on grey
color.blocking     = black on grey

# Tags

color.tag.code     = green
color.tag.started  = magenta
color.tag.home     = yellow
color.tag.book     = yellow
color.tag.blog     = yellow
color.tag.acdmy    = cyan
color.tag.course   = cyan

# Context

context.work.read=+work
context.work.write=+work
context.home.read=+home or +blog or +book
context.home.write=+home or +blog or +book
context.code.read=+code
context.code.write=+code
context.acdmy.read=+acdmy or +course
context.acdmy.write=+acdmy or +course

# Reports

report.book.description=List books
report.book.columns=project,description.desc,end
report.book.sort=end-\/,project+
report.book.filter=status:pending description="Read"
