data.location=~/.task

# Colors

include dark-violets-256.theme

## Virtual Tags

color.week         = rgb505
color.blocked      = white on rgb000
color.blocking     = black on gray0
color.overdue      = bold white on rgb101
color.due          = bold white on rgb100
color.uda.priority.H   = bold white on rgb100
color.uda.priority.M   = bold rgb110
color.uda.priority.L   = bold rgb011

## Tags

color.tag.acdmy    = rgb055
color.tag.book     = rgb520
color.tag.code     = rgb050
color.tag.work     = rgb450
color.tag.course   = rgb355
color.tag.home     = rgb510
color.tag.review   = rgb555
color.tag.started  = rgb505

# Context

context.work.read=+work
context.work.write=+work

context.home.read=+home or +book
context.home.write=+home or +book

context.code.read=+code
context.code.write=+code

context.acdmy.read=+acdmy or +course or +research
context.acdmy.write=+acdmy or +course or +research

context.review.read=+review
context.review.write=+review

# Reports

report.book.description=List books
report.book.columns=project,description.desc,end
report.book.sort=end-\/,project+
report.book.filter=status:pending

# Taskwarrior TUI

uda.taskwarrior-tui.shortcuts.1=~/.config/taskwarrior-tui/__taskopen-annotation.sh
uda.taskwarrior-tui.shortcuts.2=~/.config/taskwarrior-tui/__toggle_review_label.sh
uda.taskwarrior-tui.shortcuts.3=~/.config/taskwarrior-tui/__cycle_priority.sh
uda.taskwarrior-tui.shortcuts.4=~/.config/taskwarrior-tui/__annotate_with_note.sh
uda.taskwarrior-tui.shortcuts.5=~/.config/taskwarrior-tui/__annotate_with_new_note.sh

# Notes

# To use the default location of the XDG directories,
# move this configuration file from ~/.taskrc to ~/.config/task/taskrc and update location config as follows:

#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
#include dark-16.theme
#include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
#include solarized-dark-256.theme
#include solarized-light-256.theme
#include bubblegum-256.theme
#include no-color.theme

news.version=3.4.0
