# Launch Terminal with Tmux
super + Return;
  __open_tmux master

# Emoji Picker
super + period;
  rofi-emoji

# Clear Clipboard
super + alt + c;
  clearboard.sh

# Clipoard Manager
super + v;
  clipmenu -fn "JetBrainsMono Nerd" -b -nf '#ffffff' -nb '#000000' -sb '#1c1c1f' -sf '#7c5cff'

# Password Manager
super + d;
  rofipass -f

# Lesspass Passwords
super + D;
  pass.sh -r

# Bookmark Manager
super + b;
  bash -c "~/.local/bin/bmark -r list | rofi -dmenu | xargs -I {} xdg-open '{}'

# Search Web using Leta
super + shift + y;
  search

# Drun
super + r;
  rofi -modes drun,run -show run

# Obsidian Quick Switcher
super + F2
  rofi-obsidian

# Download Youtube Audio
super + y;
  yt-download -a

# Screenshoot
super + g;
  flameshot gui

# Browser
super + F1;
  zen-browser

# FreeTube
super + 0;
  freetube

# Tmux Session Manager, Cmus Toggle
super + c; {c,p}
  {rofi-tmux, __cmus-remote}

# Quick Audio Download
super + y
  __download-youtube.sh -a
